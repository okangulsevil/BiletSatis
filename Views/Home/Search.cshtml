@model IEnumerable<SearchResult>

<div class="container my-5">
    <h2 class="text-center">Arama Sonuçları</h2>

    @if (Model.Any())
    {
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Uçuş Numarası</th>
                    <th>Açıklama</th>
                    <th>Boş Koltuk</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model)
                {
                    <tr>
                        <td>@result.Id</td>
                        <td>@result.Title</td>
                        <td>@result.Description</td>
                        <td>@result.ExtraInfo</td>
                        <td>
                            <a href="@result.Link" class="btn btn-primary btn-sm">Rezervasyon Yap</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">Arama kriterlerinize uygun uçuş bulunamadı.</div>
    }
</div>