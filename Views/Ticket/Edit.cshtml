@model Ticket

<h2>Müşteri Güncelle</h2>
<hr>
<form asp-controller="Ticket" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="CustomerId" class="form-label">Müşteri:</label>
        <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-select">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FlightId" class="form-label">Uçuş:</label>
        <select asp-for="FlightId" asp-items="ViewBag.Flights" class="form-select">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="FlightId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SeatNumber" class="form-label">Koltuk Numarası:</label>
        <input asp-for="SeatNumber" class="form-control" />
        <span asp-validation-for="SeatNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TotalPrice" class="form-label">Toplam Fiyat:</label>
        <input asp-for="TotalPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BookingDate" class="form-label">Rezervasyon Tarihi:</label>
        <input asp-for="BookingDate" class="form-control" type="date"
            value="@Model.BookingDate?.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}