@{
    ViewData["Title"] = "Biletler";
}

@model IEnumerable<Ticket>


<div class="row my-3 align-items-center">
    <!-- Sol Kolon: Bilet Listesi ve Bilet Ekle -->
    <div class="col-md-6 d-flex align-items-center">
        <h2 class="mb-0 me-3">Bilet Listesi</h2>
        <a href="/Ticket/Create" class="btn btn-sm btn-primary">Bilet Ekle</a>
    </div>

    <!-- Sağ Kolon: Uçuş Arama -->
    <div class="col-md-6">
        <form asp-controller="Ticket" asp-action="Index" method="get">
            <div class="row align-items-center">
                <label for="flightId" class="form-label col-auto mb-0">Uçuş:</label>
                <div class="col-md-6">
                    <select name="flightId" asp-items="ViewBag.Flights" class="form-select">
                        <option value="">Seçiniz</option>
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-success">Filtrele</button>
                </div>
            </div>
        </form>
    </div>
</div>
<hr>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Customer.FullName)</th>
            <th>@Html.DisplayNameFor(m => m.Flight.FlightNumber)</th>
            <th>@Html.DisplayNameFor(m => m.Flight.Origin)</th>
            <th>@Html.DisplayNameFor(m => m.Flight.Destination)</th>
            <th>@Html.DisplayNameFor(m => m.SeatNumber)</th>
            <th>@Html.DisplayNameFor(m => m.TotalPrice)</th>
            <th style="width: 150px;">Ayarlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Customer.FullName</td>
                <td>@ticket.Flight.FlightNumber</td>
                <td>@ticket.Flight.Origin</td>
                <td>@ticket.Flight.Destination</td>
                <td>@ticket.SeatNumber</td>
                <td>@ticket.TotalPrice</td>
                <td>
                    <a asp-controller="Ticket" asp-action="Edit" asp-route-id="@ticket.Id"
                        class="btn btn-sm btn-warning">Details</a>
                    <a asp-controller="Ticket" asp-action="Delete" asp-route-id="@ticket.Id"
                        class="btn btn-sm btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>